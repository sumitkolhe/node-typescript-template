{
  "name": "node-typescript-template",
  "version": "1.0.0",
  "description": "template for creating typescript + express services",
  "license": "MIT",
  "author": "sumit kolhe",
  "main": "index.js",
  "repository": "https://github.com/sumitkolhe/node-typescript-template",
  "scripts": {
    "dev": "cross-env NODE_ENV=production nodemon",
    "start": "npm run build && cross-env NODE_ENV=production node dist/server.js",
    "build": "tsc --project tsconfig.json && tsc-alias -p tsconfig.json",
    "lint": "eslint --ignore-path .gitignore --ext .ts src/",
    "lint:fix": "npm run lint -- --fix"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "helmet": "^5.1.1",
    "mongoose": "^6.5.0",
    "morgan": "^1.10.0",
    "winston": "^3.8.1"
  },
  "devDependencies": {
    "@kolhe/eslint-config": "^1.1.5",
    "@types/cors": "^2.8.12",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.13",
    "@types/morgan": "^1.9.3",
    "@types/node": "^18.6.3",
    "eslint": "^8.21.0",
    "nodemon": "^2.0.19",
    "prettier": "^2.7.1",
    "ts-node": "^10.9.1",
    "tsc-alias": "^1.7.0",
    "tsconfig-paths": "^4.0.0",
    "typescript": "^4.7.4"
  }
}
